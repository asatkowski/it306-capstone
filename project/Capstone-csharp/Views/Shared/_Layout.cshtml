@{
    Html.Assets().Scripts.Add("/Scripts/SiteFunctions.js");
    Html.Assets().Scripts.Add("/Content/bootstrap/js/bootstrap.min.js");
    Html.Assets().Scripts.Add("/Scripts/jquery.cookie.js");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

  @Html.Assets().Styles.Render()

</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">Guild Site Framework</a>
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("Forums", "Index", "Forum")</li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                        <li class="divider-vertical"></li>
                        </ul>
                        <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="AccountLeader"> Account <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li id="Account-item1">
                                    <div id="loginform">
                                    <form action="/Account/LogOn" method="post">
                                        <label for="UserName">UserName</label>
                                        <input data-val="true" data-val-required="The User name field is required." id="UserName" name="UserName" type="text" placeholder="UserName" />
                                        <label for="Password">Password</label>
                                        <input data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password">
                                        <script type="text/javascript">document.write("<input type='hidden' name='returnUrl' value='" + document.URL + "' />");</script>
                                        <input type="submit" class="btn-primary" value="Log On">
                                        <p class="help-block">Not a member? <a href="/Account/Register" class="help-inline">Register</a></p>
                                    </form>
                                    
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>    
                </div>
            </div>
        </div>
    </header>
    <section id="main">
        <div class="container">
        @RenderBody()
        </div>
    </section>
    <footer>
    </footer>

    @Html.Assets().Scripts.Render()
</body>
</html>
