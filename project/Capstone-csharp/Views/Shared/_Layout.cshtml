<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">Guild Site Framework</a>
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("Forums", "Index", "Forum")</li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                        <li class="divider-vertical"></li>
                        </ul>
                        <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div id="loginform">
                                    <form action="/Account/LogOn" method="post">
                                        <input data-val="true" data-val-required="The User name field is required." id="UserName" name="UserName" type="text" placeholder="UserName" />
                                        <input data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password">
                                        <input type="submit" value="Log On">
                                    </div>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>    
                </div>
            </div>
        </div>
    </header>
    <section id="main">
        <div class="container">
        @RenderBody()
        </div>
    </section>
    <footer>
    </footer>

    <script>
        $('dropdown-toggle').dropdown();

        //inline hack to fix the click event on dropdown
        $('.dropdown-menu').find('form').click(function (e) {
            e.stopPropagation();
        });

    </script>

</body>
</html>
